
/* 页面整体布局 */
.container.data-v-fde52a37 {
  padding: 20px;
  background-color: #f1f1f1;
  min-height: 100vh;
  font-family: 'Arial', sans-serif;
}

/* 课程表展示区域 */
.schedule-container.data-v-fde52a37 {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  margin-bottom: 25px;
}

/* 课程表头部 */
.schedule-header.data-v-fde52a37 {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}
.course-count.data-v-fde52a37 {
  font-size: 16px;
  color: #555;
  margin-bottom: 15px;
}
.course-list-title.data-v-fde52a37 {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

/* 单个课程项样式 */
.course-item.data-v-fde52a37 {
  margin-bottom: 20px;
  padding: 15px;
  background-color: #f9f9f9;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}
.course-name.data-v-fde52a37, .course-room.data-v-fde52a37, .course-teacher.data-v-fde52a37, .course-time.data-v-fde52a37, .course-week.data-v-fde52a37 {
  font-size: 14px;
  color: #555;
  margin-bottom: 8px;
}
.course-name.data-v-fde52a37 {
  font-weight: bold;
}
.course-room.data-v-fde52a37, .course-teacher.data-v-fde52a37 {
  color: #666;
}
.course-time.data-v-fde52a37, .course-week.data-v-fde52a37 {
  color: #777;
}

/* 如果没有课程表时的提示 */
.no-schedule.data-v-fde52a37 {
  text-align: center;
  font-size: 16px;
  color: #888;
  margin-top: 50px;
}

/* 添加课程按钮样式 */
.add-course-button.data-v-fde52a37 {
  display: flex;
  justify-content: center;
  margin-top: 30px;
}
.btn-add-course.data-v-fde52a37 {
  padding: 12px 25px;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s;
}
.btn-add-course.data-v-fde52a37:hover {
  background-color: #0056b3;
}

/* 返回和删除按钮样式 */
.action-buttons.data-v-fde52a37 {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}
button.data-v-fde52a37 {
  padding: 10px 20px;
  font-size: 16px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
}
.btn-back.data-v-fde52a37 {
  background-color: #28a745;
  color: white;
}
.btn-back.data-v-fde52a37:hover {
  background-color: #218838;
}
.btn-delete.data-v-fde52a37 {
  background-color: #dc3545;
  color: white;
}
.btn-delete.data-v-fde52a37:hover {
  background-color: #c82333;
}

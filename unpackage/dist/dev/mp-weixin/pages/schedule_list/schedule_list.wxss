
/* 页面整体布局 */
.container.data-v-71c7243e {
  padding: 20px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 课程表部分 */
.section-container.data-v-71c7243e {
  margin-bottom: 20px;
}
.schedule-list.data-v-71c7243e {
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.schedule-item.data-v-71c7243e {
  padding: 15px;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}
.schedule-item.data-v-71c7243e:last-child {
  border-bottom: none;
}
.schedule-item.data-v-71c7243e:hover {
  background-color: #f9f9f9;
}

/* 添加课程按钮 */
.add-button-container.data-v-71c7243e {
  margin-top: 30px;
  display: flex;
  justify-content: center;
}
.add-button.data-v-71c7243e {
  padding: 12px 30px;
  background-color: #007AFF;
  color: white;
  font-size: 16px;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
}
.add-button.data-v-71c7243e:hover {
  background-color: #005BB5;
}
.button-text.data-v-71c7243e {
  font-weight: bold;
  text-align: center;
}

/* 输入对话框 */
.uni-popup-dialog.data-v-71c7243e {
  border-radius: 10px;
  background-color: #ffffff;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
.uni-popup-dialog input.data-v-71c7243e {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-top: 10px;
}
.uni-popup-dialog .uni-popup-dialog-footer.data-v-71c7243e {
  display: flex;
  justify-content: flex-end;
}
